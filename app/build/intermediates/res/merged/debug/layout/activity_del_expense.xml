<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.navanee.expensemanager.DelExpense">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/select_Expense_Button"
            android:id="@+id/selectExpButton"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_Expense_Label"
            android:id="@+id/textView2"
            android:layout_below="@+id/selectExpButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addExpense"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_Category_Label"
            android:id="@+id/textView3"
            android:layout_below="@+id/addExpense"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addCategory"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:entries="@array/category_Entries" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_Amount_Label"
            android:id="@+id/textView4"
            android:layout_below="@+id/addCategory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addAmount"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:editable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/add_Date_Label"
            android:id="@+id/textView5"
            android:layout_below="@+id/addAmount"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addDate"
            android:layout_below="@+id/textView5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:editable="false"
            android:layout_alignRight="@+id/selectExpButton"
            android:layout_alignEnd="@+id/selectExpButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Receipt"
            android:id="@+id/textView6"
            android:layout_below="@+id/addDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setReceiptImage"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/textView"
            android:layout_toStartOf="@+id/textView"
            android:background="@mipmap/camera"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:nestedScrollingEnabled="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_Expense_Button"
            android:id="@+id/deleteExpense"
            android:layout_below="@+id/setReceiptImage"
            android:layout_toRightOf="@+id/textView5"
            android:layout_toEndOf="@+id/textView5" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setDateButton"
            android:layout_alignBottom="@+id/addDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/addDate"
            android:background="@mipmap/ic_launcher"
            android:contentDescription="test"
            android:minHeight="40dp"
            android:minWidth="40dp"
            android:maxHeight="40dp"
            android:maxWidth="40dp"
            android:layout_below="@+id/addAmount"
            android:layout_toRightOf="@+id/addDate"
            android:src="@drawable/calendar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_Changes"
            android:id="@+id/cancelExpense"
            android:layout_below="@+id/setReceiptImage"
            android:layout_toRightOf="@+id/deleteExpense"
            android:layout_toEndOf="@+id/deleteExpense"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp" />
    </RelativeLayout>
</ScrollView>